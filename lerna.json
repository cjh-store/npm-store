{
  "packages": [
    "packages/*"
  ],
  "version": "independent",
  "npmClient": "yarn",
  "command": {
    "version": {
      "allowBranch": "master",
      "exact": true,
      "ignoreChanges": [
        "**/*.md"
      ],
      "message": "build: release version %v",
      "publish": {
        "access": "public"
      }
    },
    "bootstrap": {
      "hoist": true
    }
  },
  "registries": {
    "npm": "https://registry.npmjs.org/"
  }
}